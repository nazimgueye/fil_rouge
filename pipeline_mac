pipeline {
    agent any
    stages {
        stage('test') {
            steps {
                sh 'docker version'
            }
        }
        stage('Run Docker Compose') {
            steps {
                sh 'docker-compose up -d'
            }
        }
                stage('Send Mail') {
            steps {
                mail bcc: '', body: 'Test envoi mail', subject: 'Test', to: 'nazimgueye17@gmail.com'
            }
        }
    }
    post {
        success {
            script {
                slackSend(channel: "dev-et-devops", message: "my-first-pipeline-slack passed successfully")
            }
        }
    }
}
